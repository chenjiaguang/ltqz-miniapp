.sale-title{
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 6rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.sale-content{
  font-size: 24rpx;
  line-height: 32rpx;
  margin-right: 80rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

