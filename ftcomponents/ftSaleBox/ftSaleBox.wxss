/* ftcomponents/ftSaleBox/ftSaleBox.wxss */
@import "../../app.wxss";

.wrapper{
  padding: 14rpx 18rpx 10rpx 32rpx;
  overflow: hidden;
  box-sizing: content-box;
}
.sale-item{
  width: 336rpx;
  padding-top: 144rpx;
  box-sizing: border-box;
  margin: 0 14rpx 14rpx 0;
  border-radius: 12rpx;
  position: relative;
  float: left;
  overflow: visible;
  z-index: 1;
}
.sale-item.first{
  z-index: 2;
}
.sale-item-content{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  left: 0;
  top: 0;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
}
.sale-item-single{
  width: 98%;
  height: 144rpx;
}
