/* ftcomponents/ftModalBottom/ftModalBottom.wxss */

.iphone-extra-bottom{
  width: 100%;
  height: 68rpx;
  background: transparent;
  flex-grow: 0;
  flex-shrink: 0;
  align-self: stretch;
}
.iphone-extra-bottom1{
  background: #FFFFFF;
}
.wrapper{
  position: fixed;
  width: 100%;
  height: 100%;
  left: -200%;
  top: -200%;
  z-index: 1000;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1001;
  background: rgba(0,0,0,0.65);
  opacity: 0;
}
.content{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1002;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
}
.top{
  flex: 1;
  opacity: 0;
  transform: translateY(-5%);
}
.top1{

}
.top2{
  margin: 0 32rpx;
}
.bottom{
  transform: translateY(100%);
}
.bottom-content{

}
.bottom-content1{

}
.bottom-content2{
  margin: 0 32rpx;
}
.separator{
  height: 16rpx;
}
.separator1{
  background-color: #F5F5F5;
}
.separator2{
  background-color: transparent;
}
.cancel-btn{
  height: 80rpx;
  background-color: #FFFFFF;
  font-size: 32rpx;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cancel-btn1{
  margin: 0;
}
.cancel-btn2{
  margin: 0 32rpx;
  border-radius: 20rpx;
}
.touched{
  background-color: #F5F5F5;
}