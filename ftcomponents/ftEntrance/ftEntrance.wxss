/* components/ftEntrance/ftEntrance.wxss */
@import "../../assets/styles/ft-icon.wxss";

.entrance-wrapper {
  width: 100%;
  flex-shrink: 0;
  flex-grow: 0;
  align-self: stretch;
  position: relative;
  border-radius: 6rpx;
}

.entrance-box {
  height: 78rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.entrance-image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-right: 32rpx;
}

.c-icon-xinghao {
  font-size: 20rpx;
  color: #f24724;
  margin-right: 20rpx;
}

.entrance-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 48rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.entrance-sub-title {
  font-size: 28rpx;
  color: #333;
  max-width: 50%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 0;
  flex-grow: 0;
  margin-left: 22rpx;
}

.entrance-sub-image-box {
  display: block;
  width: 70rpx;
  height: 70rpx;
  flex-shrink: 0;
  flex-grow: 0;
  margin-left: 22rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}

.entrance-sub-image {
  display: block;
  width: 100%;
  height: 100%;
}

.entrance-sub-image-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.4);
  animation: opacityChange 1s ease-in-out infinite;
  animation-direction: alternate;
}

@keyframes opacityChange {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.c-icon-next {
  display: block;
  font-size: 24rpx;
  margin-right: -6rpx;
  margin-left: 22rpx;
  overflow: visible;
  color: #999;
}

.c-icon-next.disabled {
  color: #ccc;
}

.hover-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 3;
  background: #000;
  opacity: 0;
}

.hover {
  opacity: 0.1;
}

.hover-disabled {
  opacity: 0;
}

.line-separator-h {
  height: 1px;
  background: #e5e5e5;
  transform: scaleY(0.5);
}

.line-separator-v {
  height: 100%;
  width: 1px;
  background: #e5e5e5;
  transform: scaleX(0.5);
}

@media screen and (min-resolution: 2dppx) {
  .line-separator-h {
    height: 1rpx;
    background: #e5e5e5;
  }

  .line-separator-v {
    height: 100%;
    width: 1rpx;
    background: #e5e5e5;
  }
}
