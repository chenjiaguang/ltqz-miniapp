/* components/ftCates/ftCates.wxss */
.wrapper{
  width: 100%;
}
.container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.cate{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 16rpx;
}
.cate.touched{
  background: #f5f5f5;
}
.cate-image{
  flex-shrink: 0;
}
.cate-name{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cate-name-text{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
