/* ftcomponents/ftImageUpload/ftImageUpload.wxss */
@import "../../assets/styles/ft-icon.wxss";

.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.image-box {
  position: relative;
}

.item {
  width: 192rpx;
  height: 192rpx;
  border-radius: 8rpx;
}

.cover {
  width: 192rpx;
  height: 192rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.tip {
  position: absolute;
  top: 0;
  left: 0;
  width: 192rpx;
  height: 192rpx;
  text-align: center;
  line-height: 192rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}

.add {
  box-sizing: border-box;
  border: 1px dotted #979797;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.c-icon-jia {
  color: #ccc;
  font-size: 48rpx;
  margin-top: 43rpx;
  margin-bottom: 19rpx;
}

.add-text {
  color: #999;
  font-size: 24rpx;
}

.item:nth-child(1), .item:nth-child(4) {
  margin-bottom: 24rpx;
}

.c-icon-close {
  color: #ff3b30;
  font-size: 33rpx;
  position: absolute;
  top: -17rpx;
  right: -17rpx;
}
