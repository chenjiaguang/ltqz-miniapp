@import "../../assets/styles/ft-icon.wxss";

.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  width: 192rpx;
  height: 192rpx;
  border-radius: 8rpx;
}

.cover {
}

.add {
  box-sizing: border-box;
  border: 1rpx dotted #979797;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.c-icon-jia {
  color: #ccc;
  font-size: 48rpx;
  margin-top: 43rpx;
  margin-bottom: 19rpx;
}

.add-text {
  color: #999;
  font-size: 24rpx;
}

.item:nth-child(1), .cover:nth-child(4) {
  margin-bottom: 24rpx;
}