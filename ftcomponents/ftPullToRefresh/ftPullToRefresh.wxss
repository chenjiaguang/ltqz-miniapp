/* ftcomponents/ftPullToRefresh/ftPullToRefresh.wxss */
@keyframes rolling {
  0% {
    transform: scale(1, 1);
  }
  100% {
    transform: scale(1, 1);
  }
}
@keyframes rolling2 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@keyframes fadeout {
  0% {
    opacity: 1;
    transform: rotate(135deg) scale(1);
  }
  100% {
    opacity: 0;
    transform: rotate(135deg) scale(0);
  }
}
:host{
  overflow-y: visible;
  /* position: relative; */
}
.refresh-icon{
  position: fixed;
  width: 32px;
  height: 32px;
  top: -32px;
  left: 100rpx;
  transform: translateY(0);
  z-index: 9999;
}
.refresh-icon.transition {
  transition: top 0.3s ease-in-out;
}
.refresh-icon.animation {
  animation: rolling2 1.5s linear infinite;
}
