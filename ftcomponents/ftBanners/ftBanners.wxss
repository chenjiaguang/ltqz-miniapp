/* components/ftBanners/ftBanners.wxss */

.banners-box{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  transition: height 300ms;
}
.single-banner-wrapper{
  display: block;
  margin: 0 32rpx;
  width: unset;
  height: 100%;
  border: none;
  overflow: hidden;
}
.single-banner-content{
  display: block;
  height: 100%;
  overflow: hidden;
}
.single-banner{
  display: block;
  width: 100%;
  height: 100%;
}
.banner-swiper{
  width: 100%;
  height: 100%;
  flex: 1;
  position: relative;
  z-index: 1;
}
.banner-item-content{
  height: 100%;
  position: relative;
  overflow: hidden;
}
.banner-image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  color: #fff;
  padding: 8rpx 20rpx 0;
  font-size: 32rpx;
  line-height: 40rpx;
  background: rgba(0,0,0,0.3);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.banner-indicator{
  flex-grow: 0;
  flex-shrink: 0;
  position: absolute;
  right: 32rpx;
  bottom: 20rpx;
  width: 84rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  z-index: 2;
  border-radius: 22rpx;
  background-color: rgba(0,0,0,0.66);
  pointer-events: none
}
.banner-indicator-item{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin: 0 6rpx;
  box-shadow: 0 0 6rpx 2rpx rgba(255,255,255,0.4);
}