/* components/starBox/starBox.wxss */
.star-wrapper{
  display: flex;
  align-items: center;
  padding: 0;
  flex-shrink: 0;
  flex-grow: 0;
  overflow: visible;
  opacity: 0;
  visibility: hidden;
}
.star-wrapper.show{
  opacity: 1;
  visibility: visible;
}
.star-item{
  position: relative;
  background: transparent;
}
.star-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.star-image{
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
}
.score-text{
  height: 100%;
  color: #64B631;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}