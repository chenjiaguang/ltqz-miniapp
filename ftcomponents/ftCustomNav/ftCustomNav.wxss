/* ftcomponents/ftCustomNav/ftCustomNav.wxss */
@import "../../app.wxss";

.wrapper{
  display: block;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  overflow: visible;
  /* opacity: 1; */
  z-index: 99;
  /* transition: opacity 0.3s, z-index 0.3s; */
}
.line-separator-h{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  transform-origin: 50% 100%;
  z-index: 3;
}
.nav-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.status-bar{
  position: relative;
  z-index: 2;
}
.nav-box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 2;
}
.left-btns{
  position: absolute;
  left: 7px;
  top: 50%;
  display: flex;
  align-items: center;
  /* background: green; */
  visibility: visible !important;
}
.icon-button{
  position: relative;
  z-index: 999;
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  /* background: red; */
}
/* .icon-button.show{
  visibility: visible;
}
.icon-button.hide{
  visibility: hidden;
} */
.icon{
  padding: 0;
  border: none;
  font-size: 20px;
  text-align: center;
  border-radius: 50%;
  display: block !important;
  visibility: visible !important;
}
.icon-black.show{
  background: rgba(0, 0, 0, 0.1);
}
.icon-white.show{
  background: rgba(255, 255, 255, 0.1);
}
.icon-black.hide{
  background: rgba(0, 0, 0, 0.15);
}
.icon-white.hide{
  background: rgba(255, 255, 255, 0.6);
}
.icon:after{
  display: none;
  visibility: hidden;
}
.title{
  font-size: 18px;
  line-height: 24px;
  font-weight: 500;
  opacity: 1;
  background-color: transparent;
  display: block !important;
}
.title.hide{
  opacity: 0;
}
.intersection-dot{
  width: 100%;
  visibility: hidden;
}