/* ftcomponents/ftCustomNav/ftCustomNav.wxss */
@import "../../app.wxss";

.wrapper{
  display: block;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  opacity: 1;
  z-index: 99;
  /* transition: opacity 0.3s, z-index 0.3s; */
}
.wrapper.show{
  opacity: 1;
  z-index: 99;
}
.wrapper.hide{
  opacity: 0;
  z-index: -1;
}
.nav-box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.left-btns{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  overflow: hidden;
  padding-left: 7px;
  display: flex;
  align-items: center;
}
.nav-back{
  font-size: 20px;
  margin: -1rpx 5px 0 -1rpx;
}
.nav-home{
  display: block;
  width: 24px;
  height: 24px;
}
.title{
  font-size: 18px;
  line-height: 24px;
  font-weight: 500;
  padding-bottom: 2px;
}
.intersection-dot{
  width: 100%;
  height: 1px;
  visibility: hidden;
}