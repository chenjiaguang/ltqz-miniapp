.buyfor-wrapper{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  z-index: -1;
  visibility: hidden;
}
.buyfor-wrapper.show{
  z-index: 3;
  visibility: visible;
}
.buyfor-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: transparent;
  transition: background 200ms;
}
.buyfor-mask.show{
  background: rgba(0,0,0,0.65);
}
.buyfor-context{
