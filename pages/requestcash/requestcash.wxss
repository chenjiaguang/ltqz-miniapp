}

.title {
  color: #333;
  font-size: 30rpx;
  margin-top: 34rpx;
  margin-bottom: 36rpx;
}

.input-box {
  margin-bottom: 35rpx;
  color: #f24724;
}

.prefix {
  font-size: 36rpx;
  line-height: 36rpx;
}

.input {
  font-size: 60rpx;
