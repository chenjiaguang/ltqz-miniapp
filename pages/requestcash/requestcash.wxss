}

.btn {
  margin: 60rpx 4% 0 4%;
  height: 82rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
  border-width: 0;
  border-radius: 6rpx;
}

.btn.disabled {
  background: #999;
}
