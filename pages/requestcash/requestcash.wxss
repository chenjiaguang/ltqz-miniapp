}

.paytype-box {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.wechat {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.typename {
  font-size: 34rpx;
  line-height: 48rpx;
  margin-bottom: 4rpx;
  color: #333;
}

.typedesc {
  font-size: 28rpx;
  line-height: 40rpx;
