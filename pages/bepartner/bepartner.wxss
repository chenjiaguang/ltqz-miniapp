.item {
  height: 80rpx;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.title {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
}

