/* pages/commentmanager/commentmanager.wxss */
page {
  height: 100%;
  /* background-color: #fff !important; */
  display: flex;
  flex-direction: column;
}

.page-commentlist {
  background: #fff;
}

.page-body{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.tab-body{
  width: 100%;
  flex: 1;
}

.overview {
  position: relative;
  width: 100%;
  z-index: 1;
  height: 88rpx;
  overflow: visible;
}

.overview-context {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  background: #fff;
}

.overview-context.fixed {
  position: fixed;
}

.overview-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 4%;
}

.comment-amount {
  font-size: 28rpx;
  color: #999;
}

.reply-wrapper-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  visibility: hidden;
  z-index: -1;
  opacity: 0;
  transition: opacity 300ms;
}

.reply-wrapper-mask.show {
  visibility: visible;
  z-index: 2;
  opacity: 1;
}

.bottom-reply-box {
  position: fixed;
  height: 100rpx;
  display: flex;
  left: 0;
  right: 0;
  bottom: -101rpx;
  z-index: 3;
  background-color: #f5f5f5;
  padding: 0 4%;
  transform: 0;
  transition-property: transform;
  transition-duration: 0;
}

.bottom-reply-box.focus {
  bottom: 0;
}

.reply-input {
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  padding-left: 24rpx;
  font-size: 30rpx;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.reply-btn {
  font-size: 36rpx;
  color: #64b631;
  margin-left: 33rpx;
}

.reply-btn.disable {
  color: #ccc;
}

.empty-img {
  height: 140rpx;
  width: 150rpx;
  margin-top: 248rpx;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.empty-text {
  margin-top: 39rpx;
  color: #999;
  font-size: 26rpx;
  display: block;
  text-align: center;
}

/* tab样式 */
.tabs-wrapper {
  width: 100%;
  height: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  align-self: stretch;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.header1-wrapper{
  width: 100%;
  position: relative;
}

.header {
  width: 100%;
  height: 88rpx;
  position: relative;
  white-space: nowrap;
  font-size: 0;
  flex-grow: 0;
  flex-shrink: 0;
  background-color: #fff;
}

.title-box {
  height: 100%;
  padding: 0 20rpx;
  display: inline-block;
  flex-shrink: 0;
  flex-grow: 0;
}

.header2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title-box2 {
  display: block;
  flex: 1;
}

.title {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
  transition: color 0.3s;
}

.current-sign {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  max-width: 100%;
}

.slide-box {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 3;
}

.slide-block {
  display: block;
  width: 44rpx;
  height: 4rpx;
  margin-left: -22rpx;
  transition: transform 0.3s;
}

.tap-body{
  flex: 1;
  position: relative;
}

.tab-swiper {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
}

.line-separator-h {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: #e5e5e5;
  transform: scaleY(0.5);
}

@media screen and (min-resolution: 2dppx) {
  .line-separator-h {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    background: #e5e5e5;
  }
}

.body-wrapper{
  width: 100%;
  height: 100%;
}

.empty-tip{
  padding:100rpx 4% 20rpx;
  text-align:center;
  font-size:30rpx;
  color:#999;
}
