<!--pages/orderlist/orderlist.wxml-->
<ft-tabs class="tabs" type="2" tabs="{{tabs}}" index="{{index}}" catchfetchlist="fetchlist" showEmpty="{{false}}" catchtabchange='tabchange'>
  <view slot="tab0">
    <view class='list-box'>
      <order-card wx:for="{{tabs[0].list}}" item="{{item}}" wx:key="order_id" catchorderListRefresh='refresh'></order-card>
    </view>
    <image wx:if="{{tabs[0].loaded&&tabs[0].list.length==0}}" class='empty-img' src='/assets/images/order.png' />
    <text wx:if="{{tabs[0].loaded&&tabs[0].list.length==0}}" class='empty-text'>还没有相关的订单哦，快去下单吧~</text>
  </view>
