.page-permission {
  background: #fff;
}

.bg {
  width: 100%;
}

.tip {
  font-size: 32rpx;
  line-height: 45rpx;
  margin-top: 20rpx;
  margin-bottom: 43rpx;
  color: #666;
}

.typerow:nth-of-type(1) {
  margin-bottom: 34rpx;
}

.typeicon {
  font-size: 66rpx;
  margin-right: 48rpx;
}

.typeicon.able{
  color: #64B631;
}
