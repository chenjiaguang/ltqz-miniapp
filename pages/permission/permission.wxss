}

.title {
  font-size: 26rpx;
  line-height: 37rpx;
  color: #64B631;
}

.desc {
  margin-top: 2rpx;
  width: 400rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #333;
}

