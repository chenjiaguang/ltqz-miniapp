<!--pages/goodsdetail/goodsdetail.wxml-->
<view class='page-goodsdetail'>
  <view class='banner-wrapper'>
    <image class='cover' src="{{cover_url}}" mode="aspectFill"></image>
    <view class='share-wrapper'>
      <share-button profit="{{shareProfit}}" />
    </view>
  </view>
  <view class='overview'>
    <view class='title'>{{title}}</view>
    <view class='intro'>{{desc}}</view>
    <view class='price-and-status'>
      <view class='price'><text wx:if="{{min_price && min_price > 0}}" class='actual-price'>¥{{min_price}}{{price_num > 1 ? '起' : ''}}</text><text wx:if="{{!min_price || min_price == 0}}" class='actual-price'>免费</text></view>
      <view class="status status{{status}}">{{statusText[status]}}</view>
    </view>
    <view style="height:34rpx"></view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>活动时间：{{valid_btime}}至{{valid_etime}}</text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>报名截止时间：{{dead_line}}</text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view wx:if="{{address && address.text}}" class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>活动地点：{{address.text}}</text><text class='right-icon lutufont lutu-location'></text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view wx:if="{{jh_address && jh_address.text}}" class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>集合地点：{{jh_address.text}}</text><text class='right-icon lutufont lutu-location'></text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>适合年龄段：{{min_age === '-1' ? '不限年龄' : (min_age + ' ~ ' + max_age)}}</text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view wx:if="{{limit_num}}" class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>{{limit_num}}</text></view>
    </view>
    <view class='state-block-wrapper'>
      <view class='line-separator-h'></view>
      <view wx:if="{{!refuse}}" class='state-block'><text class='left-icon lutufont lutu-location'></text><text class='state-block-text'>本次活动不支持退款</text></view>
    </view>
  </view>
  <view wx:if="{{join_num && join_num > 0}}" class='join-box'>
    <view class='block-separator'></view>
    <view class='join-header'><text>累计{{join_num}}人参加</text></view>
    <view class='line-separator-h'></view>
    <view class='join-users'>
      <image wx:for="{{join_users}}" wx:for-index="idx" wx:for-item="user" wx:key="id" class='user' src="{{user.avatar}}" mode="aspectFill"></image>
      <view wx:if="{{join_users && join_users.length && join_users.length >= 5}}" class='more-user'><view class='dot'></view><view class='dot'></view><view class='dot'></view></view>
    </view>
  </view>
  <view class='sponsor-box'>
    <view class='block-separator'></view>
    <view class='sponsor-header'><text>活动主办方</text><text wx:if="{{shop.type_pic_url}}" style="font-size:26rpx;color:#999;">查看商家资质<text class='next-icon lutufont lutu-location' style="margin-left:26rpx;"></text></text></view>
    <view class='line-separator-h'></view>
    <view class='sponsor-overview'>
      <image class='sponsor-avatar' src="{{shop.logo_url}}" mode="aspectFill"></image>
      <view class='sponsor-right'>
        <view class='sponsor-title'>{{shop.name}}</view>
        <view class='sponsor-intro'>{{shop.introduce}}</view>
        <view class='activity-and-score'>
          <view class=''>活动数量<text class='green-number' style="margin-left:10rpx">{{shop.huodong_num}}</text></view>
          <view class='line-separator-v' style="height:28rpx;background:#D8D8D8;margin:0 30rpx"></view>
          <view class=''>商家评分<text class='green-number' style="margin-left:10rpx">{{shop.rate}}</text></view>
        </view>
      </view>
      <text class='next-icon lutufont lutu-location' style="margin-left:26rpx;align-self:center"></text>
    </view>
  </view>
  <view class='detail-and-comment'>
    <view class='block-separator'></view>
    <view class='detail-and-comment-header'>
      <view catchtap="changeTab" data-idx="{{0}}" class="detail-and-comment-tab{{currentTab === 0 ? ' current' : ''}}"><text>详情</text><view class="tab-indicator{{currentTab === 0 ? ' current' : ''}}"></view></view>
      <view catchtap="changeTab" data-idx="{{1}}" class="detail-and-comment-tab{{currentTab === 1 ? ' current' : ''}}"><text>评价({{evaluation_num}})</text><view class="tab-indicator{{currentTab === 1 ? ' current' : ''}}"></view></view>
    </view>
    <view class='line-separator-h'></view>
    <view class='detail-and-comment-content'>
      <view class="goodsdetail-content{{currentTab === 0 ? ' current' : ''}}">
        <import src="../../utils/wxParse/wxParse.wxml" />
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
        <view wx:if="{{!content}}" style="text-align:center;font-size:28rpx;color:#999">加载中...</view>
      </view>
      <view class="goodsdetail-score{{currentTab === 1 ? ' current' : ''}}">
        <view wx:if="{{comments && comments.length}}" class='score-overview'>
          <view class='overview-content'>
            <ft-star-box score="{{shop.rate}}" size="{{30}}" />
            <text class='comment-amount'>{{evaluation_num}}人评价</text>
          </view>
          <view class='line-separator-h'></view>
        </view>
        <view wx:if="{{!comments || !comments.length}}" class='empty-comment'>
          <image class='empty-image' src="{{}}" mode="aspectFit"></image>
          <text class='empty-text'>啊哦，暂时还没有评价哦~</text>
        </view>
        <comment-box wx:for="{{comments}}" wx:for-index="idx" wx:for-item="comment" wx:key="id" comment="{{comment}}" top-border="{{idx !== 0}}" />
      </view>
    </view>
  </view>
  <!-- <button open-type='share'>转发详情</button> -->
  <view class='bottom-button-wrapper'>
    <view class='session-wrapper'>
      <view class='session-content'>
        <view class='session-box'>
          <view class='session-header'>选择场次</view>
          <scroll-view scroll-x class='sessions'>
            <view wx:for="{{session}}" wx:for-index="idx" wx:for-item="ss" wx:key="id" class="session{{idx === 0 ? ' first' : ''}}{{(idx + 1) === session.length ? ' last' : ''}}{{ss.stock == 0 ? ' disabled' : ((ss.stock === null || ss.stock > 20) ? ' ample' : ' normal')}}">
              <text>{{ss.name}}</text>
              <view class="session-status{{ss.stock == 0 ? 'disabled' : ((ss.stock === null || ss.stock > 20) ? ' ample' : ' normal')}}">{{ss.stock == 0 ? '售罄' : ((ss.stock === null || ss.stock > 20) ? '充足' : ('余' + ss.stock))}}</view>
            </view>
          </scroll-view>
          <view class='line-separator-h'></view>
          <view class='ticket-header'>选择数量</view>
          <view class='ticket-box'>
            <view wx:for="{{currentTickets}}" wx:for-index="idx" wx:for-item="ticket" wx:key="id" class='ticket-item'>
              <view class='ticket-name'>{{ticket.name}}</view>
              <view class='ticket-price'>¥{{ticket.price}}</view>
              <view class='ticket-buttons'>
                <view class="minus-btn{{ticket.num <= 0 ? ' disabled' : ''}}">
                  <text class="lutufont lutu-jian{{ticket.num <= 0 ? ' disabled' : ''}}"></text>
                </view>
                <view class='choose-num'><text class="choose-num-text{{(ticket.num <= 0 || ticket.stock === 0 || (ticket.stock && ticket.stock <= ticket.num)) ? ' disabled' : ''}}">{{ticket.num}}</text></view>
                <view class="add-btn{{(ticket.stock === 0 || (ticket.stock && ticket.stock <= ticket.num)) ? ' disabled' : ''}}">
                  <text class="lutufont lutu-jia{{(ticket.stock === 0 || (ticket.stock && ticket.stock <= ticket.num)) ? ' disabled' : ''}}"></text>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class='line-separator-h' style="transform-origin:50% 100%;background:transparent"></view>
        <view style="height:100rpx"></view>
      </view>
    </view>
    <view class='line-separator-h' style="transform-origin:50% 100%;background:transparent"></view>
    <view style="height:100rpx"></view>
    <view class='bottom-button'>
      <view class='line-separator-h' style="transform-origin:50% 100%;background:#D8D8D8"></view>
      <view class='bottom-button-content'>
        <view wx:if="{{contact}}" data-phone="{{contact}}" class='call-btn' hover-stop-propagation hover-class='touched' hover-start-time="{{50}}" hover-stay-time="{{200}}" catchtap="call">
          <text class='tel-icon lutufont lutu-location'></text>
          <text class='tel-text'>电话咨询</text>
        </view>
        <button class='go-next' disabled="{{status !== '1'}}">{{buttonStatusText[status]}}</button>
      </view>
      <ft-iphone-bottom-adapter bg="#fff" />
    </view>
    <ft-iphone-bottom-adapter />
  </view>
</view>
