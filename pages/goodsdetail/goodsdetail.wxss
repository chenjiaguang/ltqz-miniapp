/* 场次、票种选择框 */
.session-wrapper{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  z-index: -1;
  visibility: hidden;
}
.session-wrapper.show{
  z-index: 3;
  visibility: visible;
}
.session-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: transparent;
  transition: background 300ms;
}
.session-mask.show{
  background: rgba(0,0,0,0.65);
}
.session-context{
  border-radius: 12rpx 12rpx 0 0;
  background: #fff;
  padding: 62rpx 0 0;
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  transform: translateY(100%);
  transition: transform 300ms;
}
.session-context.show{
  transform: translateY(0);
}
.sessions{
  width: 100%;
  font-size: 0;
  white-space: nowrap;
}
.session{
  display: inline-block;
  font-size: 26rpx;
  width: 220rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin: 22rpx 0 40rpx 13rpx;
  color: #333;
}
.session.first{
  margin-left: 32rpx;
}
.session.last{
  margin-right: 32rpx;
}
.session-ample{
  background: #F8F8F8;
  color: #333;
}
.session-normal{
  background: #F8F8F8;
  color: #333;
}
.session-disabled{
  background: #F8F8F8;
  color: #999;
}
.session-status{
  height: 40rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 8rpx 0 20rpx 0;
  position: absolute;
  left: 0;
  top: 0;
  transform: scale(0.833, 0.833);
  transform-origin: 0 0;
}
.session-status.ample{
  color: #fff;
}
.session-status.normal{
  background: #F24724;
  color: #fff;
}
.session-status.disabled{
  background: #E6E6E6;
  color: #333;
}
.session-header, .ticket-header{
  height: 66rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 0 32rpx;
}
.session-content{
  font-size: 28rpx;
  line-height: 32rpx;
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.session-content-text{
  max-width: 100%;
  white-space: normal;
  word-break: break-all;
  box-sizing: border-box;
  padding: 0 16rpx;
  text-align: center;
}

.ticket-box{
