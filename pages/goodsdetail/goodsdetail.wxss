/* pages/goodsdetail/goodsdetail.wxss */
@import "../../utils/wxParse/wxParse.wxss";

page{
  background: #FFFFFF;
}
.page-goodsdetail{
  background: #FFFFFF;
}
.banner-wrapper{
  height: 320rpx;
  position: relative;
}
.cover{
  display: block;
  width: 100%;
  height: 320rpx;
}
.share-wrapper{
  position: absolute;
  right: 0;
  bottom: 45rpx;
}

.overview{
  padding: 22rpx 32rpx 27rpx;
  background: #fff;
}
.title{
  font-size: 34rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-top: 12rpx;
}

.intro{
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-top: 12rpx;
}
.price-and-status{
  padding-top: 38rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price{
  line-height: 50rpx;
}
.actual-price{
  font-size: 36rpx;
  font-weight: bold;
  color: #F24724;
}
.origin-price{
  font-size: 28rpx;
  color: #999999;
  margin-left: 10rpx;
  text-decoration: line-through;
}
.status{
  font-size: 28rpx;
  line-height: 40rpx;
}
.status.status1{
  color: #64B631;
}
.status.status2, .status.status3{
  color: #999
}
.state-block{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.state-block-text{
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
   font-size: 28rpx;
  color: #333;
}

.left-icon, .right-icon{
  font-size: 28rpx;
  color: #979797;
}
.left-icon{
  display: flex;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.right-icon{
  margin-left: 10rpx;
}

.join-box{
  background: #fff;
}
.join-header{
  padding: 0 32rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.join-users{
  height: 120rpx;
  display: flex;
  align-items: center;
}
.user{
  width: 80rpx;
  height: 80rpx;
  margin-left: 21rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.user:first-child{
  margin-left: 32rpx;
}
.more-user{
  width: 80rpx;
  height: 80rpx;
  margin-left: 21rpx;
  border: 1px solid #979797;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  flex-shrink: 0;
  box-sizing: border-box;
}
.more-user:first-child{
  margin-left: 32rpx;
}
.dot{
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #979797;
  margin: 5rpx;
}

.sponsor-header{
  height: 70rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}

.sponsor-box{
  background: #fff;
}
.sponsor-overview{
  display: flex;
  padding: 30rpx 32rpx 24rpx;
}
.sponsor-avatar{
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}
.sponsor-right{
  padding: 0 0 0 30rpx;
  flex: 1;
}
.sponsor-title{
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
  font-weight: bold;
}
.sponsor-intro{
  font-size: 26rpx;
  line-height: 38rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-top: 14rpx;
}
.activity-and-score{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  padding-top: 20rpx;
  height: 38rpx;
}
.green-number{
  font-weight: bold;
  color: #64B631;
}
.next-icon{
  font-size: 26rpx;
  color: #999;
}

.detail-and-comment{
  background: #fff;
}
.detail-and-comment-header{
  display: flex;
  position: relative;
  justify-content: center;
  padding: 0 90rpx;
}
.detail-and-comment-tab{
  width: 50%;
  height: 100%;
  line-height: 90rpx;
  position: relative;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}
.detail-and-comment-tab.current{
  color: #64B631;
}
.tab-indicator{
  position: absolute;
  width: 66rpx;
  height: 6rpx;
  background: transparent;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}
.tab-indicator.current{
  background: #64B631;
}

.goodsdetail-content, .goodsdetail-score{
  display: none;
}
.goodsdetail-content.current, .goodsdetail-score.current{
  display: block;
}
.goodsdetail-content{
  padding: 50rpx 32rpx;
}
.score-overview{
  
}
.overview-content{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
}
.comment-amount{
  font-size: 28rpx;
  color: #999;
}
.empty-comment{
  height: 486rpx;
  box-sizing: border-box;
  padding-top: 102rpx;
  text-align: center;
}
.empty-image{
  display: block;
  width: 140rpx;
  height: 150rpx;
  margin: 30rpx auto 0;
}
.empty-text{
  font-size: 26rpx;
  color: #999;
  line-height: 38rpx;
  padding-top: 30rpx;
}
.more-comment{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #64B631;
}

.bottom-button-wrapper{
  overflow: visible;
}
.bottom-button{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 2;
}
.bottom-button-content{
  display: flex;
  height: 100rpx;
  background: #fff;
}
.call-btn{
  width: 238rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tel-icon{
  font-size: 36rpx;
  line-height: 36rpx;
  color: #999999;
  margin: 5rpx 0 7rpx;
}

.tel-text{
  font-size: 24rpx;
  line-height: 34rpx;
  color: #333;
}
.join-btn{
  flex: 1;
  border: none;
  border-radius: 0;
  font-size: 36rpx;
  color: #fff;
  background: #64B631;
}
.join-btn:after, .join-btn:before{
  display: none;
}
button.join-btn.disabled{
  background: #B8B8B8;
  color: #fff;
}

/* 场次、票种选择框 */
.session-wrapper{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  z-index: -1;
  visibility: hidden;
}
.session-wrapper.show{
  z-index: 3;
  visibility: visible;
}
.session-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: transparent;
  transition: background 200ms;
}
.session-mask.show{
  background: rgba(0,0,0,0.65);
}
.session-context{
  border-radius: 12rpx 12rpx 0 0;
  background: #fff;
  padding: 62rpx 0 0;
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  transform: translateY(100%);
  transition: transform 200ms;
}
.session-context.show{
  transform: translateY(0);
}
.sessions{
  width: 100%;
  font-size: 0;
  white-space: nowrap;
}
.session{
  display: inline-block;
  font-size: 26rpx;
  width: 220rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin: 22rpx 0 40rpx 13rpx;
}
.session.first{
  margin-left: 32rpx;
}
.session.last{
  margin-right: 32rpx;
}
.session.ample{
  background: #F8F8F8;
  color: #333;
}
.session.normal{
  background: #F8F8F8;
  color: #333;
}
.session.disabled{
  background: #F8F8F8;
  color: #999;
}
.session.current{
  background: #D4EBC6;
  color: #333;
}
.session-status{
  height: 40rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 8rpx 0 20rpx 0;
  position: absolute;
  left: 0;
  top: 0;
  transform: scale(0.833, 0.833);
  transform-origin: 0 0;
  background: #E6E6E6;
}
.session-status.ample{
  background: #64B631;
  color: #fff;
}
.session-status.normal{
  background: #F24724;
  color: #fff;
}
.session-status.disabled{
  background: #E6E6E6;
  color: #333;
}
.session-header, .ticket-header{
  height: 66rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 0 32rpx;
}
.session-content{
  font-size: 28rpx;
  line-height: 32rpx;
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ticket-box{
  max-height: 400rpx;
}
.ticket-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  padding: 0 32rpx;
  height: 76rpx;
}
.ticket-name{
  width: 260rpx;
  padding-right: 12rpx;
  flex-shrink: 0;
  font-size: 30rpx;
  color: #333;
}
.ticket-price{
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.ticket-buttons{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.minus-btn, .add-btn{
  width: 44rpx;
  height: 44rpx;
  border-width: 1px;
  border-style: solid;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.minus-btn{
  border-color: #D8D8D8;
  color: #888888;
  background: #fff;
}
.minus-btn.disabled{
  border-color: #D8D8D8;
  color: #D8D8D8;
  background: #fff;
}
.add-btn{
  border-color: #64B631;
  background: #64B631;
  color: #fff;
}
.add-btn.disabled{
  border-color: #D8D8D8;
  color: #D8D8D8;
  background: #fff;
}
.choose-num{
  min-width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}
.choose-num-text.disabled{
  color: #D8D8D8;
}
.stock-text{
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}
.stock-text.disabled{
  color: #999999;
}

.next-step-button{
  display: flex;
  height: 100rpx;
  background: #fff;
}
.total-price{
  width: 450rpx;
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 32rpx;
}
.total-price-title{
  font-size: 24rpx;
  color: #333;
  margin-right: 20rpx;
  padding-top: 12rpx;
}
.total-price-text{
  font-size: 46rpx;
  color: #F24724;
  margin-right: 20rpx;
  font-weight: bold;
}
.next-btn{
  flex: 1;
  border: none;
  border-radius: 0;
  font-size: 36rpx;
  color: #fff;
  background: #64B631;
}
.next-btn:after, .next-btn:before{
  display: none;
}
button.next-btn.disabled{
  background: #B8B8B8;
  color: #fff;
}

.share-canvas{
  position: fixed;
  width: 526rpx;
  height: 816rpx;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.65);
}
