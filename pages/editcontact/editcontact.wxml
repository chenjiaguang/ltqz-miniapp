<!--pages/editcontact/editcontact.wxml-->
<view class='page-editcontact'>
  <view class='info-box'>
    <view class='info-item-wrapper'>
      <view class='info-item'>
        <view class='left-box'><text>姓名</text></view>
        <view class='right-box'>
          <input class='right-input' type="text" value="{{name}}" bindinput="infoInput" data-ele="name" placeholder='请输入真实姓名' placeholder-class='input-placeholder'></input>
        </view>
      </view>
      <view class='line-separator-h' style="width:696rpx;margin-left:26rpx;"></view>
    </view>
    <view class='info-item-wrapper'>
      <picker range="{{genderPickerRange}}" class="right-box-wrapper" range-key="label" value="{{genderSelected}}" bindchange='genderChange'>
        <view class='info-item'>
          <view class='left-box'><text>性别</text></view>
            <view class='right-box'>
              <text class="gender-text{{genderSelected === null ? ' disabled' : ''}}">{{genderPickerRange[genderSelected].label || '请选择性别'}}</text>
              <text class='next-icon lutufont lutu-next2'></text>
            </view>
        </view>
      </picker>
      <view class='line-separator-h' style="width:696rpx;margin-left:26rpx;"></view>
    </view>
    <view wx:if="{{requireIdcard}}" class='info-item-wrapper'>
      <view class='info-item'>
        <view class='left-box'><text>身份证号</text></view>
        <view class='right-box'>
          <input class='right-input' type="text" value="{{idcard}}" bindinput="infoInput" data-ele="idcard" placeholder='请输入身份证号' placeholder-class='input-placeholder'></input>
        </view>
      </view>
      <view class='line-separator-h' style="width:696rpx;margin-left:26rpx;"></view>
    </view>
  </view>
  <button class="save-btn{{((requireIdcard && !idcard) || !name || (genderSelected === null) || submitting) ? ' disabled' : ''}}" disabled="{{(requireIdcard && !idcard) || !name || (genderSelected === null) || submitting}}" catchtap="saveContact">保存</button>
</view>
