.red{
  color: #FF3B30;
}
.page-editcontact {
  background: #f5f5f5;
}

.info-box {
  margin: 0;
  padding: 0 40rpx;
}

.info-item {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.left-box {
  width: 174rpx;
  color: #666;
  height: 100%;
  display: flex;
  align-items: center;
}

.right-box {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.right-input {
  height: 100%;
  width: 100%;
  color: #333;
}

.input-placeholder {
  font-size: 28rpx;
  color: #d8d8d8;
  font-weight: normal;
}

.gender-text {
  font-size: 28rpx;
  color: #333;
}

.gender-text.disabled {
  color: #d8d8d8;
}

.next-icon {
  font-size: 26rpx;
  color: #999;
}

.btn {
  width: 580rpx;
  text-align: center;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 41rpx;
  box-sizing: border-box;
  margin: 44rpx auto 0;
}

.save-btn {
  border: none;
  font-size: 36rpx;
  font-weight: normal;
  color: #fff;
}

.save-btn:after, .save-btn:before {
  display: none;
}

.del-btn {
  border: 2rpx solid;
  margin-top: 24rpx;
}

.save-btn.disabled {
  background: #D8D8D8;
  color: #fff;
}

.line-separator-h {
  margin-right: -40rpx;
  width: unset;
}
