/* pages/orderComment/orderComment.wxss */

.card {
  margin: 16rpx 4% 0 4%;
  padding-top: 1rpx;
  padding-bottom: 1rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.rate-box {
  padding: 36rpx 0;
}

.rate-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.input-box {
  margin: 0 0 48rpx 0;
  position: relative;
}

.input {
  border-radius: 8rpx;
  border: 1rpx solid rgba(216, 216, 216, 1);
  font-size: 28rpx;
  padding: 20rpx;
  height: 240rpx;
  width: unset;
}

.input-tip {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  margin-right: 20rpx;
}

.textarea-placeholder {
  color: #ccc;
}

.pics-box {
  margin: 0 0 60rpx 0;
}

.btn {
  height: 82rpx;
  line-height: 82rpx;
  background: #64b631;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 50rpx;
}
