/* pages/orderdetail/orderdetail.wxss */

.page-orderdetail {
  padding-bottom: 16rpx;
}

.title {
  padding: 0 4%;
  font-size: 30rpx;
  font-weight: bold;
  height: 78rpx;
  line-height: 78rpx;
}

.list {
  margin-top: 16rpx;
  background-color: #fff;
}

.item {
  padding: 25rpx 0;
}

.key {
  font-size: 28rpx;
  color: #666;
  margin-left: 30rpx;
  width: 142rpx;
  margin-right: 30rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 30rpx;
}

.line-separator-h {
  margin-left: 30rpx;
  width: 720rpx;
}

.left-time {
  height: 68rpx;
  width: 100%;
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  transform: translateY(-100%);
  transition: transform 300ms;
}

.left-time.show{
  transform: translateY(0);
}

.goods {
  padding: 30rpx;
  background-color: #fff;
}

.goods-cover {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.goods-content {
  min-width: 0;
}

.goods-title {
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.goods-time {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-location {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.lutu-next2 {
  margin-left: 36rpx;
  align-self: center;
  font-size: 25rpx;
  color: #999;
}

.bottom-button-height{
  height: 100rpx;
}

.bottom-button{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background :#fff;
}

.pay {
  font-size: 36rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay.disabled{
  background-color: #B8B8B8;
}

.ticket {
  background-color: #64b631;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

