/* pages/orderdetail/orderdetail.wxss */

.page-orderdetail {
  padding-bottom: 100rpx;
}

.title {
  padding: 0 4%;
  font-size: 30rpx;
  font-weight: bold;
  height: 78rpx;
  line-height: 78rpx;
}

.list {
  margin-top: 16rpx;
  background-color: #fff;
}

.item {
  padding: 25rpx 0;
}

.key {
  font-size: 28rpx;
  color: #666;
  margin-left: 30rpx;
  width: 142rpx;
  margin-right: 30rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 30rpx;
}

.line-separator-h {
  margin-left: 30rpx;
}

.left-time {
  background-color: #64b631;
  height: 84rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 84rpx;
  text-align: center;
}

.pay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ff9500;
  height: 100rpx;
  font-size: 36rpx;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
}

.ticket {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #64b631;
  height: 100rpx;
  font-size: 36rpx;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
}

.goods {
  padding: 30rpx;
  background-color: #fff;
}

.goods-cover {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.goods-content {
  min-width: 0;
}

.goods-title {
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.goods-time {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-location {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.lutu-next2 {
  align-self: center;
  font-size: 25rpx;
  color: #999;
}
