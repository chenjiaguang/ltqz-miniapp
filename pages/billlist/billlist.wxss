/* pages/billlist/billlist.wxss */
.bill-area{
  background: #FFFFFF;
}
.bill-header{
  font-size: 32rpx;
  height: 80rpx;
  color: #333333;
  padding: 12rpx 32rpx 0;
  display: flex;
  align-items: center;
  box-sizing: content-box;
}
.unread-sign {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #FF2266;
  margin-bottom: 20rpx;
}
.bill-content{
  padding-bottom: 21rpx;
}
.bill-line{
  padding: 10rpx 32rpx;
  display: flex;
}
.bill-key{
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999999;
  margin-right: 14rpx;
}
.bill-value{
  font-size: 24rpx;
  line-height: 30rpx;
  color: #333333;
}
.bill-time{
  font-size: 24rpx;
  line-height: 70rpx;
  color: #999999;
  padding: 0 32rpx;
}

.empty-img {
  width: 472rpx;
  height: 398rpx;
  margin-top: 296rpx;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.empty-text {
  margin-top: 0;
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
  display: block;
  text-align: center;
}