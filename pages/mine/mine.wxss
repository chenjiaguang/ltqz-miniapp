/* pages/mine/mine.wxss */

.page-mine {
  padding-bottom: 80rpx;
}

.card:first-child {
  margin-top: 0;
}

.user-info {
  padding-top: 37rpx;
  padding-left: 4%;
  padding-right: 4%;
  padding-bottom: 125rpx;
  height: 282rpx;
  background: #64b631;
  box-sizing: border-box;
}

.user-intro {
  flex: 1;
}

.user-info .lutu-next2 {
  font-size: 26rpx;
  color: #fff;
}

.avatar {
  margin-right: 30rpx;
}

.user-person {
  margin-right: 20rpx;
}

.person-age {
  border-left: 1px solid #333;
}

.user-name-box {
  margin-bottom: 13rpx;
}

.user-name {
  font-size: 38rpx;
  line-height: 38rpx;
  color: #fff;
}

.user-tag {
  font-size: 26rpx;
  line-height: 34rpx;
  color: #fff;
  padding: 0 10rpx;
  border: 1px solid #fff;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.other-list {
  margin-top: -88rpx;
}

.card .lutu-next2 {
  color: #999;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.order-box {
  background: #fff;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.title {
  color: #333;
  font-size: 30rpx;
}

.view-detail {
  color: #999;
  font-size: 26rpx;
}

.order-type {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.itemfont {
  position: relative;
}

.item-num {
  position: absolute;
  left: 42rpx;
  top: -15rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  color: #64b631;
  border: 2rpx solid #64b631;
  background-color: #fff;
  border-radius: 16px;
}

.type-icon {
  width: 110rpx;
  height: 110rpx;
}

.order-type .lutufont {
  width: 56rpx;
  height: 56rpx;
  font-size: 56rpx;
  color: #64b631;
  margin-top: 46rpx;
  margin-bottom: 16rpx;
}

.type-title {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 46rpx;
}

.profit-box {
  background: #fff;
  margin-top: 30rpx;
}

.profit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.profit-sum {
  font-size: 46rpx;
  line-height: 46rpx;
  color: #f24724;
  margin-bottom: 24rpx;
}

.profit-overview {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
}

.profit-overview-item {
  width: 50%;
  box-sizing: border-box;
  border-left: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profit-overview-item:first-child {
  border-left: none;
}

.profit-overview-title {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.profit-overview-amount {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #666;
}

.be-partner {
  background: #fff;
  margin-top: 30rpx;
}

.business-entrance {
  background: #fff;
  margin-top: 30rpx;
}

.other-entrances {
  background: #fff;
  margin-top: 30rpx;
}

.line-separator-h {
  margin-right: -30rpx;
  width: unset;
}

.unit {
  color: #999;
}
