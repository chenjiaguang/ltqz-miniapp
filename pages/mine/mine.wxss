/* pages/mine/mine.wxss */
page{
  display: flex;
  flex-direction: column;
  min-height: 100%;
}
.page-mine {
  padding-bottom: 80rpx;
  min-height: 100%;
}
.page-mine-visitor{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}
.card{
  margin: 0;
  padding: 0;
  border-radius: 0;
}
.card:first-child {
  margin-top: 0;
}

.user-info {
  padding-top: 37rpx;
  padding-left: 6.13%;
  padding-right: 4%;
  padding-bottom: 22rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.user-intro {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.user-info .lutu-next2 {
  font-size: 24rpx;
  margin-right: -6rpx;
  color: #999999;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
}

.user-person {
  margin-right: 20rpx;
}

.person-age {
  border-left: 1px solid #333;
}

.user-name-box{
  font-size: 38rpx;
  line-height: 42rpx;
  color: #333;
  font-weight: bold;
}

.user-tag-box{
  height: 36rpx;
  font-size: 24rpx;
  border-radius: 18rpx;
  color: #ffffff;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin: 14rpx 0 0 0;
  /* display: flex;
  align-items: center; */
}
.user-tag-box:before{
  content: '';
  display: inline-block;
  vertical-align: middle;
  width: 0;
  height: 100%;
  margin-top: 1px;
}

.user-tag-box-text{
  display: block;
}

/* .other-list {
  margin-top: -88rpx;
} */

.card .lutu-next2 {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.order-box {
  background: #fff;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx 0 24rpx;
}

.title {
  color: #333;
  font-size: 30rpx;
  flex: 1;
}

.view-detail {
  color: #999;
  font-size: 26rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.order-type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 22rpx;
}

.type-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 25rpx;
}

.order-type-icon-box{
  position: relative;
  overflow: visible;
}
.order-type-icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
}

.itemfont {
  position: relative;
}

.item-num {
  position: absolute;
  left: 42rpx;
  top: -15rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-width: 2rpx;
  border-style: solid;
  background-color: #fff;
  border-radius: 16px;
}

.type-icon {
  width: 110rpx;
  height: 110rpx;
}

.itemfont {
  width: 56rpx;
  height: 56rpx;
  font-size: 56rpx;
  margin-top: 26rpx;
  margin-bottom: 16rpx;
}

.type-title {
  color: #666;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-top: 12rpx;
  margin-bottom: 26rpx;
}

.profit-box {
  background: #fff;
  padding: 0;
}

.profit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx 0 24rpx;
}

.user-order-icon, .user-profit-icon{
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.profit-sum {
  font-size: 46rpx;
  line-height: 46rpx;
  color: #f24724;
  margin-bottom: 24rpx;
  padding: 0 24rpx 0 84rpx;
}

.profit-overview {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 34rpx 0;
}

.profit-overview-item {
  width: 50%;
  box-sizing: border-box;
  padding: 0 24rpx;
  border-left: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profit-overview-item:first-child {
  border-left: none;
}

.profit-overview-title {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.profit-overview-amount {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #666;
}

.be-partner {
  background: #fff;
}

.business-entrance {
  background: #fff;
}

.other-entrances {
  background: #fff;
}

.line-separator-h {
  width: unset;
}

.unit {
  color: #999;
}

.order-header-icon, .profit-header-icon, .entrance-icon{
  font-size: 40rpx;
  line-height: 40rpx;
  margin-right: 7rpx;
  color: #888888;
}
.order-header-next, .profit-header-next{
  margin-right: -6rpx;
}

.red-dot{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  margin-top: -2rpx;
}

.visitor-image{
  width: 512rpx;
  height: 593rpx;
}
.login-tip{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #666;
  margin-top: 75rpx;
}
.login-btn{
  width: 330rpx;
  height: 76rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 76rpx;
  color: #FFFFFF;
  text-align: center;
  border-radius: 38rpx;
  margin-top: 62rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(198, 9, 76, 0.2);
}
.login-btn:before{
  content: '';
  display: inline-block;
  vertical-align: middle;
  width: 0;
  height: 100%;
  margin-top: 1px;
}
