/**app.wxss**/
@import "./assets/styles/lutu-icon.wxss";

.line-separator-h {
  width: 100%;
  height: 1px;
  background: #EEEEEE;
  transform: scaleY(0.5);
}

.line-separator-v {
  height: 100%;
  width: 1px;
  background: #EEEEEE;
  transform: scaleX(0.5);
}

@media screen and (min-resolution: 2dppx) {
  .line-separator-h {
    width: 100%;
    height: 1px;
    background: #EEEEEE;
    transform: scaleY(0.5);
  }

  .line-separator-v {
    height: 100%;
    width: 1px;
    background: #e5e5e5;
    transform: scaleX(0.5);
  }
}

.block-separator {
  width: 100%;
  height: 16rpx;
  background: #F5F5F5;
}




