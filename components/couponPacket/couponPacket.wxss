/* components/couponPacket/couponPacket.wxss */
@import "../../app.wxss";
.packet-box{
  position: absolute;
  width: 690rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 32rpx;
  overflow: hidden;
  background: linear-gradient(180deg,rgba(255,86,89,1) 0%,rgba(212,23,78,1) 100%);
  box-shadow: 0 8rpx 30rpx 0 rgba(175,10,41,0.4);
}
.packet-bg{
  display: block;
  position: absolute;
  width: 100%;
  height: 352rpx;
  left: 0;
  top: 0;
  z-index: 1;
}
.header-box{
  width: 100%;
  height: 160rpx;
}
.coupon-scroller{
  position: relative;
  width: 628rpx;
  min-height: 162rpx;
  max-height: 648rpx;
  left: 31rpx;
  z-index: 2;
}
.coupon-box-wrapper{
  width: 628rpx;
  height: 162rpx;
  position: relative;
}
.coupon-uncheck, .coupon-checked{
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.coupon-box{
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.left-box{
  position: absolute;
  width: 140rpx;
  height: 134rpx;
  left: 30rpx;
  top: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.price{
  text-align: center;
  font-weight: bold;
}
.price-sign{
  font-size: 32rpx;
  line-height: 32rpx;
  vertical-align: bottom;
}
.price-num{
  font-size: 56rpx;
  line-height: 56rpx;
  vertical-align: bottom;
}
.threshold{
  font-size: 20rpx;
  line-height: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 12rpx;
}
.right-box{
  width: 314rpx;
  height: 134rpx;
  position: absolute;
  left: 214rpx;
  top: 15rpx;
  /* background: green; */
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.coupon-title{
  font-size: 24rpx;
  line-height: 32rpx;
  min-height: 64rpx;
  color: #333333;
  font-weight: bold;
}
.coupon-tip{
  font-size: 22rpx;
  line-height: 26rpx;
  color: #999999;
  padding-top: 9rpx;
}
.receive-btn{
  width: 64rpx;
  height: 134rpx;
  position: absolute;
  top: 15rpx;
  right: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.receive-btn-text{
  font-size: 24rpx;
  line-height: 28rpx;
  writing-mode: vertical-lr;
  color: #FFDBA0;
}
.receive-btn-text.disabled{
  color: #FFFFFF;
}
.packet-footer-wrapper{
  position: relative;
  width: 100%;
  height: 160rpx;
  z-index: 3;
  margin-top: -30rpx;
  overflow: hidden;
}
.packet-footer{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.packet-footer-tip{
  position: relative;
  z-index: 2;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #FFFFFF;
  text-align: center;
  margin-top: 67rpx;
}