/* components/orderCard/orderCard.wxss */
@import "../../app.wxss";

.wrapper {
  margin: 0;
  border-radius: 0;
  padding: 0;
}

.head {
  height: 72rpx;
  padding: 0 32rpx;
}

.date{
  font-size: 24rpx;
  color: #999999;
}
.state-normal{
  color: #666;
}

.state-normal2{
  font-size: 28rpx;
  color: #333333;
}

.cover{
  width: 134rpx;
  height: 134rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.money {
  color: #f24724;
}

.line-separator-h {
  /* margin-right: -30rpx; */
  width: unset;
}

.bottom-bar{
  padding: 20rpx 32rpx;
}

.pay-price{
  height: 36rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.total-amount{
  font-size: 28rpx;
  color: #666666;
  margin-right: 20rpx;
  vertical-align: middle;
}
.total-pay-title{
  font-size: 28rpx;
  color: #666666;
  margin-right: 20rpx;
  vertical-align: middle;
}
.total-pay-amount{
  font-size: 36rpx;
  color: #F24724;
  vertical-align: middle;
}

.foot {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 20rpx;
}

.btn {
  font-size: 24rpx;
  line-height: 24rpx;
  height: 50rpx;
  padding: 0 20rpx;
  border-radius: 25rpx;
  border-width: 1px;
  border-style: solid;
  box-sizing: border-box;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.btn:first-child{
  margin-left: 0;
}

.btn-detail {
  color: #999;
  border: 1rpx solid #999;
  line-height: 48rpx;
}

.btn-online {
  color: #fff;
}

.btn-refund{
  color: #999999;
  border-color: #999999;
}

.btn-apply-refund{
  color: #999999;
  border-color: #999999;
}

.btn-cancel{
  color: #999999;
  border-color: #999999;
}

.btn-confirm{
  color: #fff;
}
.btn-pay {
  color: #fff;
}

.btn-comment {
  color: #fff;
}
.content-wrapper{
  padding: 20rpx 32rpx;
  display: flex;
}
.content-wrapper-right{
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.title{
  font-size: 26rpx;
  line-height: 30rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.ticket{
  flex: 1;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #999999;
  padding-top: 8rpx;
}
.ticket-price-and-amount{
  padding-top: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ticket-price{
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333333;
}
.ticket-amount{
  line-height: 32rpx;
  color: #999999;
}
