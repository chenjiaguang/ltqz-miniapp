/* components/collectBtn/collectBtn.wxss */
@import "../../app.wxss";

.wrapper{
  overflow: visible;
}
.content{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: visible;
  display: flex;
  justify-items: center;
  align-items: center;
}
.bg{
  width: 160%;
  height: 160%;
  position: absolute;
  left: -30%;
  top: -30%;
  border-radius: 50%;
  overflow: hidden;
  backface-visibility: hidden;
  transform: translate3d(0,0,0);
}
.bg-content{
  width: 130%;
  height: 130%;
  margin-left: -15%;
  margin-top: -15%;
  border-radius: 50%;
  box-shadow: 0 0 6rpx 6rpx rgb(255,149,0) inset;
  transform: scale(0.33, 0.33);
  opacity: 0;
}
.icon{
  transform: scale(1,1);
}