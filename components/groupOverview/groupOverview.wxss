/* components/groupOverview/groupOverview.wxss */
@import "../../app.wxss";

.wrapper{
  background-color: #FFFFFF;
  padding-bottom: 28rpx;
}
.header{
  height: 76rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.status{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.next-text{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
  padding: 6rpx;
  border-radius: 3rpx;
}
.lutu-next2{
  margin-left: 15rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}
.join-users{
  display: flex;
  flex-wrap: wrap;
  padding-left: 89rpx;
  overflow: hidden;
}
.join-user-box{
  display: block;
  width: 92rpx;
  height: 92rpx;
  position: relative;
  margin-top: 28rpx;
  margin-right: 28rpx;
}
.join-user-avatar{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 50%;
}
.join-user-empty{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.master{
  width: 64rpx;
  height: 32rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  top: 0;
  right: -30rpx;
}
.share-btn{
  width: 268rpx;
  height: 72rpx;
  font-size: 32rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  color: #fff;
  margin: 30rpx auto 0;
}
