/* components/commentBox/commentBox.wxss */
.wrapper{
  overflow: hidden;
}
.overview{
  padding: 3% 4%;
  display: flex;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}
.overview-right{
  flex: 1;
  overflow: visible;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.username-and-score{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: visible;
}

.comment-main{
  padding: 0 4%;
  margin-left: 130rpx;
}
.comment-content{
  white-space: pre-wrap;
}
.comment-images{
  display: flex;
  flex-wrap: wrap;
}
.image-wrapper{
  width: 32%;
  padding-top: 32%;
  margin-left: 2%;
  margin-top: 2%;
  position: relative;
}
.image-wrapper.left{
  margin-left: 0;
}
.image-wrapper.first-line{
  margin-top: 0;
}
.comment-image{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.goods{
  word-break: break-all;
}
.reply{
  white-space: pre-wrap;
}