/* components/goodsDetailStatus/goodsDetailStatus.wxss */
@import "../../app.wxss";

.wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  box-sizing: border-box;
  padding: 16rpx 32rpx 0;
  position: relative;
  overflow: hidden;
}
.wrapper.disabled{
  background-color: #B8B8B8;
}
.shadow-box{
  width: 72.4%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}
.shadow1{
  position: absolute;
  width: 100%;
  height: 500%;
  left: 0;
  top: 0;
  transform: rotate(20deg);
  transform-origin: 100% 0;
}
.shadow2{
  position: absolute;
  width: 100%;
  height: 500%;
  left: 0;
  bottom: 0;
  transform: rotate(-20deg);
  transform-origin: 100% 100%;
}
.actual-price{
  font-size: 58rpx;
  /* line-height: 58rpx; */
  font-weight: bold;
  color: #FFFFFF;
  overflow: visible;
  position: relative;
  z-index: 1;
}
.free-price{
  font-size: 48rpx;
  line-height: 58rpx;
  font-weight: bold;
  color: #FFFFFF;
  position: relative;
  z-index: 1;
}
.text-qi{
  font-size: 34rpx;
  padding-top: 14rpx;
}
.origin-price{
  font-size: 36rpx;
  line-height: 36rpx;
  color: #FFFFFF;
  margin-left: 24rpx;
  padding-top: 20rpx;
  text-decoration: line-through;
  flex: 1;
  position: relative;
  z-index: 1;
}
.group-sign{
  position: absolute;
  left: 0;
  bottom: 38rpx;
}
.status{
  font-size: 28rpx;
  line-height: 40rpx;
}
.status-able{
  color: #fff;
}
.status-other{
  color: #fff;
}
.count-down-box{
  padding-bottom: 16rpx;
}
.count-down-text{
  font-size: 26rpx;
  line-height: 34rpx;
  text-align: right;
  color: #fff;
}