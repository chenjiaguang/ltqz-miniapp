/* components/couponCard/couponCard.wxss */
@import "../../app.wxss";

.card-box{
  width: 686rpx;
  height: 162rpx;
  position: relative;
  z-index: 2;
  margin: 0 auto;
}
.card-box-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
.card-box-content{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}
.card-box-left{
  position: absolute;
  width: 160rpx;
  height: 140rpx;
  top: 10rpx;
  left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.card-box-price{
  text-align: center;
  font-weight: bold;
}
.price-sign{
  font-size: 32rpx;
  line-height: 32rpx;
  vertical-align: bottom;
}
.price-num{
  font-size: 48rpx;
  line-height: 48rpx;
  vertical-align: bottom;
}
.card-box-threshold{
  font-size: 20rpx;
  line-height: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 16rpx;
}
.card-box-right{
  position: absolute;
  width: 430rpx;
  height: 140rpx;
  top: 10rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.card-box-title{
  font-size: 24rpx;
  line-height: 32rpx;
  min-height: 64rpx;
}
.card-box-tip-and-more{
  font-size: 20rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin: 6rpx 0 2rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  overflow: visible;
}
.card-box-tip{
  flex: 1;
  color: #999999;
}
.card-box-more{
  padding: 24rpx 10rpx 24rpx 20rpx;
  height: 24rpx;
  box-sizing: content-box;
  display: flex;
  align-items: center;
}
.more-btn-text{
  color: #999999;
}
.more-icon{
  display: block;
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  transform: rotate(180deg);
  transition: transform 300ms;
  overflow: visible;
}
.more-icon.show{
  transform: rotate(0);
}
.card-statement{
  position: relative;
  bottom: 10rpx;
  width: 652rpx;
  margin: 0 auto;
  background: #FFFFFF;
  max-height: 0;
  transition: max-height 300ms;
}
.card-statement.show{
  max-height: 1000rpx;
}
.card-statement-content{
  padding: 22rpx 12rpx;
}