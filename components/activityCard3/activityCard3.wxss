/* components/activityCard3/activityCard3.wxss */
@import "../../app.wxss";

.card {
  padding: 30rpx;
  margin: 0;
  border-radius: 0;
}

.cover-box {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-right: 24rpx;
}

.cover {
  width: 100%;
  height: 100%;
}

.status{
  position: absolute;
  width: 100%;
  height: 36rpx;
  left: 0;
  bottom: 0;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.status-other{
  background: rgba(0,0,0, 0.65);
}

