.content-box {
  flex: 1;
  min-width: 0;
}

.title {
  color: #333;
  font-size: 32rpx;
  line-height: 38rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.location {
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time {
  margin-bottom: 10rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom-box {
  height: 86rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: stretch;
  margin-top: 35rpx;
}

.lutu-users {
  font-size: 42rpx;
  line-height: 42rpx;
  margin-right: 10rpx;
  color: #333;
}

.num {
  font-size: 34rpx;
  line-height: 42rpx;
  color: #333;
}

.white-touched {
  background: #f5f5f5;
}

.usernum, .moneynum{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}