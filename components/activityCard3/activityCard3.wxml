<!--components/activityCard/activityCard.wxml-->
<view class='card column' catchtap="goSignUpManager" hover-stop-propagation hover-class='card-touched' hover-start-time="{{50}}" hover-stay-time="{{200}}">
  <view class='top-box row'>
    <view class='cover-box'>
      <image class='cover' src="{{activity.cover}}" />
      <text wx:if="{{activity.state==0}}" class='state state0'>报名中</text>
      <text wx:if="{{activity.state==1}}" class='state state1'>已满额</text>
      <text wx:if="{{activity.state==2}}" class='state state2'>已截至</text>
      <text wx:if="{{activity.state==3}}" class='state state3'>已结束</text>
    </view>
    <view class='content-box column'>
      <text class='title bold'>{{activity.title}}</text>
      <text class='location'>{{activity.location}}</text>
      <text class='time'>{{activity.time}}</text>
    </view>
  </view>
  <view class='line-separator-h'></view>
  <view class='bottom-box row center jc-around'>
    <text class='usernum'>报名人数：30</text>
    <text class='moneynum'>预计收入：￥4499</text>
  </view>
</view>