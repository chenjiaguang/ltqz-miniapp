/* components/activityCard/activityCard.wxss */
@import "../../app.wxss";

.wrapper{
  padding: 32rpx 0 24rpx;
  position: relative;
  overflow: hidden;
  background: #ffffff;
}
.cover{
  display: block;
  width: auto;
  height: 386rpx;
  border-radius: 8rpx;
  border: none;
  margin: 0 32rpx;
}
.price-tag{
  height: 74rpx;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  top: 176rpx;
  background: #64B631;
  border-radius: 0 8rpx 8rpx 0;
  padding: 0 32rpx;
}
.actual-price-qi{
  font-size: 28rpx;
}
.title{
  padding: 12rpx 32rpx 4rpx;
  font-size: 32rpx;
  color: #333333;
  line-height: 46rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.intro{
  padding: 4rpx 32rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tags-and-join{
  padding: 10rpx 32rpx 0 24rpx;
  display: flex;
  overflow: hidden;
}
.tags{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.tag-item{
  margin: 8rpx;
  padding: 0 8rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #64B631;
  background: #EFF7EB;
  border-radius: 2rpx;
}
.join{
  font-size: 28rpx;
  line-height: 36rpx;
  color: #999999;
  display: flex;
  align-items: center;
}