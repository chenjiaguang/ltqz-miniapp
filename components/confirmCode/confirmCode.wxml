<!--components/confirmCode/confirmCode.wxml-->
<view class="wrapper{{ actived ? ' actived-wrapper' : ''}}" catchtouchmove="stopPropagation">
  <view class='confirm-box'>
    <view class='title'>{{title}}</view>
    <view class='code-box' catchtap="onFocus">
      <view wx:for="{{codeArr}}" wx:key="*this" wx:for-index="idx" wx:for-item="code" class='code-item'><text>{{codeStr[idx]}}</text></view>
    </view>
    <view class="btn{{confirming ? ' confirming' : ''}}{{codeStr.length !== maxLength ? ' disabled' : ''}}" catchtap="confirm">{{confirming ? '验证中...' : btnText}}</view>
    <input class='bg-input' type="number" cursor-spacing="{{150}}" focus="{{focus}}" value="{{codeStr}}" maxlength="{{maxLength}}" bindinput="codeInput" bindfocus='onFocus' bindblur='onBlur'></input>
  </view>
</view>
