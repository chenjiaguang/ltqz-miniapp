/* components/confirmCode/confirmCode.wxss */
.wrapper{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0);
  visibility: hidden;
  transform: scale(0.96, 0.96);
  transition: transform 200ms, background-color 200ms;
}
.actived-wrapper{
  background-color: rgba(0,0,0,0.6);
  transform: scale(1, 1);
  z-index: 1;
  visibility: visible;
}
.confirm-box{
  position: relative;
  background: #fff;
  overflow: hidden;
}
.code-box{
  display: flex;
  justify-content: center;
  align-items: center;
}
.code-item{
  width: 80rpx;
  height: 80rpx;
}
.bg-input{
  position: absolute;
  width: 0;
  height: 0;
  left: -200%;
  bottom: 0;
  z-index: -1;
  visibility: hidden;
  opacity: 0;
}
.btn{
  background: green;
}
.btn.disabled{
  background: #999;
}