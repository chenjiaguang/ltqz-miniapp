/* components/loginModal/loginModal.wxss */

.login-box{
  background: #FFFFFF;
  padding: 42rpx 0;
  width: 500rpx;
  margin: 0 auto 0;
  border-radius: 24rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.header{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333333;
  font-weight: bold;
  text-align: center;
}
.tip{
  font-size: 20rpx;
  line-height: 28rpx;
  color: #999999;
  margin-top: 24rpx;
  text-align: center;
}
.login-banner{
  display: block;
  width: 340rpx;
  height: 200rpx;
  margin: 64rpx auto 0;
}
.btn-box{
  display: flex;
  height: 78rpx;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 54rpx 0;
}
.btn{
  width: 144rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  text-align: center;
}
.btn:before{
  content: '';
  display: inline-block;
  vertical-align: middle;
  width: 0;
  height: 100%;
  margin-top: 1px;
}
.btn-cancel{
  background: rgba(62, 215, 233, 0.2);
  color: rgba(62, 215, 233, 1);
}
.btn-confirm{
  background: rgba(62, 215, 233, 1);
  color: rgba(249, 249, 249, 1);
  box-shadow: 0 4rpx 12rpx 0 rgba(74, 165, 201, 0.3);
}