/* components/orderContent/orderContent.wxss */
@import "../../app.wxss";
.content {
  padding: 0 4%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.cover {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.title {
  display: block;
  color: #333;
  font-size: 32rpx;
  line-height: 38rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.location {
  display: block;
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-bottom: 10rpx;
}

.time {
  display: block;
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-bottom: 10rpx;
}

.tickets {
  display: block;
  color: #333;
  font-size: 24rpx;
  line-height: 24rpx;
}