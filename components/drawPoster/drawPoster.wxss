@keyframes shareBoxAnimation {
  0%{
    z-index: -2;
    visibility: hidden;
  }
  0.01%{
    z-index: 100;
    visibility: visible;
  }
  100%{
    z-index: 100;
    visibility: visible;
  }
}
@keyframes shareBoxAnimation1 {
  0%{
    z-index: 100;
    visibility: visible;
  }
  99.99%{
    z-index: 100;
    visibility: visible;
  }
  100%{
    z-index: -2;
    visibility: hidden;
  }
}
@keyframes posterMaskAnimation {
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}
@keyframes posterMaskAnimation1 {
  0%{
    opacity: 1;
  }
  100%{
    opacity: 0;
  }
}
@keyframes posterTopWrapperAnimation {
  0%{
    opacity: 0;
    transform: translateY(-5%);
  }
  100%{
    opacity: 1;
    transform: translateY(0);
  }
}
@keyframes posterTopWrapperAnimation1 {
  0%{
    opacity: 1;
    transform: translateY(0);
  }
  100%{
    opacity: 0;
    transform: translateY(-5%);
  }
}
@keyframes posterBottomWrapperAnimation {
  0%{
    opacity: 0;
    transform: translateY(101%);
  }
  100%{
    opacity: 1;
    transform: translateY(0);
  }
}
@keyframes posterBottomWrapperAnimation1 {
  0%{
    opacity: 0;
    transform: translateY(0);
  }
  100%{
    opacity: 1;
    transform: translateY(101);
  }
}